/*
 * Images
 */

+prefix-classes('mbi-')
	.cover
		.figure
			position relative
		.image-container
			height 0
			width 100%
		img.image
			position absolute
			height 100%
			width 100%
			object-fit cover

	.images
		display flex

	.figure
		margin 0
		border-width 1em
		border-color transparent

	.image-container
		position relative

	.image
		display block

	.figcaption
		padding .5em
		text-align center

		.images &
			font-size 16px

	.image-bg_image
		width 100%
		height 100%
		position absolute
		top 0
		left 0
		background-size cover
		background-position center
		display none
