/*
 * Control Slider
 */

#mbi-controls
	.components-range-control
		.components-base-control__slider
			flex 1
			margin-left 0

		.components-base-control__label
			min-width 100%
			margin-right 0

		.components-base-control__field
			display flex

// https://css-tricks.com/styling-cross-browser-compatible-range-inputs-css/
#mbi-controls
	input[type=range]
		-webkit-appearance: none;

	input[type=range]:focus
		outline none
		box-shadow none

	input[type=range]::-webkit-slider-runnable-track
		background-color rgba(0,0,0,.1)
		border none
		box-shadow none

	input[type=range]::-webkit-slider-thumb
		box-shadow none
		border none
		height 12px
		width 12px
		border-radius 50%
		background-color rgba(0,0,0,.75)
		cursor pointer
		-webkit-appearance none
		margin-top -5px

	input[type=range]:focus::-webkit-slider-runnable-track
		background-color rgba(0,0,0,.1)
		border none
		box-shadow none
		outline none

	input[type=range]::-moz-range-track
		background-color rgba(0,0,0,.1)
		border none
		box-shadow none

	input[type=range]::-moz-range-thumb
		box-shadow none
		border none
		height 12px
		width 12px
		border-radius 50%
		background-color rgba(0,0,0,.75)
		cursor pointer
		-webkit-appearance none
		margin-top -5px

	input[type=range]::-ms-track
		background-color rgba(0,0,0,.1)
		border none
		box-shadow none

	input[type=range]::-ms-fill-lower
		background-color rgba(0,0,0,.1)
		border none
		box-shadow none

	input[type=range]::-ms-fill-upper
		background-color rgba(0,0,0,.1)
		border none
		box-shadow none

	input[type=range]::-ms-thumb
		box-shadow none
		border none
		height 12px
		width 12px
		border-radius 50%
		background-color rgba(0,0,0,.75)
		cursor pointer
		-webkit-appearance none
		margin-top -5px

	input[type=range]:focus::-ms-fill-lower
		background-color rgba(0,0,0,.1)
		border none
		box-shadow none
		outline none

	input[type=range]:focus::-ms-fill-upper
		background-color rgba(0,0,0,.1)
		border none
		box-shadow none
		outline none
